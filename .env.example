# Copy to .env and fill real keys.
# MOCK=true runs everything with local mocks (no external APIs required)
PORT=3000
MOCK=true

# CORS (comma-separated origins or * for any)
ALLOWED_ORIGIN=*

# Gemini (Google)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash-latest

# Snowflake (optional now; used when MOCK=false)
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PRIVATE_KEY=

# DigitalOcean Gradient (optional now)
GRADIENT_API_KEY=

# Auth0 (only required when MOCK=false)
AUTH0_SECRET=
AUTH0_BASE_URL=
AUTH0_ISSUER_BASE_URL=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
